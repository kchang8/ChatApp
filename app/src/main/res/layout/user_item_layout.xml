<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/searchItem_profileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_baseline_person_24">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/searchItem_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toRightOf="@+id/searchItem_profileImage"
        android:layout_centerInParent="true"
        android:layout_marginLeft = "12dp"
        android:textSize="19sp">

    </TextView>

    <!--shows the latest message user username-->
    <TextView
        android:id="@+id/searchItem_lastMessage"
        android:layout_below="@id/searchItem_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/searchItem_profileImage"
        android:layout_marginTop="14dp"
        android:layout_marginLeft = "20dp"
        android:padding="6dp"
        android:textSize="19sp"
        android:maxLines="1"
        android:textColor="@color/teal_700">

    </TextView>

    <ImageButton
        android:id="@+id/searchItem_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="186dp"
        android:layout_marginLeft="186dp"
        android:layout_centerInParent="true"
        android:background="@color/teal_200"
        android:layout_toEndOf="@+id/searchItem_username"
        android:src="@drawable/ic_baseline_add_24">

    </ImageButton>


</RelativeLayout>