<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/post_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_userProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_icon"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:textColor="@android:color/black"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/post_mainImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/profile_icon"
            android:scaleType="centerCrop"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/post_likeButton"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:src="@drawable/heart_not_clicked"
                />

            <ImageView
                android:id="@+id/post_commentButton"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/comment"
                android:layout_toEndOf="@+id/post_likeButton"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                />

<!--            <ImageView-->
<!--                android:id="@+id/post_save_comment_btn"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="39dp"-->
<!--                android:src="@drawable/save_unfilled_large_icon"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:layout_marginRight="3dp"-->
<!--                />-->

        </RelativeLayout>



        <TextView
            android:id="@+id/post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/post_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/post_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="@android:color/black"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>